generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// schema.prisma


// Add this to your schema.prisma file

model Video {
  id           String   @id @default(cuid())
  filename     String
  originalName String
  mimeType     String   @default("video/mp4")
  size         Int      // File size in bytes
  data         Bytes    // The actual video file as binary data
  metadata     Json?    // Store video metadata (duration, ayah count, template, etc.)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("videos")
}
